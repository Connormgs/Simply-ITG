<ActorFrame>
	<children>
		<ActorFrame
			PillShowCommand="stoptweening;accelerate,0.15;zoomy,1"
			PillHideCommand="stoptweening;sleep,.1;decelerate,0.15;zoomy,0"

			InitCommand="zoomy,0"

			PillGainFocusCommand="wag;EffectMagnitude,0,20,0;effectClock,beat;EffectPeriod,4"
			PillLoseFocusCommand="stopeffect"
			>
			<children>
				<!-- don't use zbuffer or else arrows with intersect the pills -->
				<Actor
					File="pill.model"
					PillGainFocusCommand="zoom,0.6"
					PillLoseFocusCommand="zoom,0.5"
					InitCommand="zbuffer,0"
				/>

				<BitmapText
					Text="TEXT"
					File="Common Normal"
					SetYesCommand="settext,YES"
					SetNoCommand="settext,NO"
					SetOKCommand="settext,OK"
					InitCommand="diffuse,#FFFFFF"
					PillGainFocusCommand="zoom,0.75"
					PillLoseFocusCommand="zoom,0.6"
				/>
			</children>
		</ActorFrame>
	</children>
</ActorFrame>
